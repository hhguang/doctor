<p id="notice"><%= notice %></p>

<h1>Diagnoses</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Heart rate</th>
      <th>Bp</th>
      <th>Bs</th>
      <th>Prescription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diagnoses.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.patient %></td>
        <td><%= diagnosis.heart_rate %></td>
        <td><%= diagnosis.bp %></td>
        <td><%= diagnosis.bs %></td>
        <td><%= diagnosis.prescription %></td>
        <td><%= link_to 'Show', diagnosis %></td>
        <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis) %></td>
        <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

