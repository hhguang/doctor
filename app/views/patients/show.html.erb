<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @patient.phone %>
</p>

<p>
  <strong>Sex:</strong>
  <%= @patient.sex %>
</p>

<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>

<p>
  <strong>Birthyear:</strong>
  <%= @patient.birthyear %>
</p>

<p>
  <strong>Case history:</strong>
  <%= @patient.case_history %>
</p>
<hr/>
<%= link_to "增加记录", new_patient_diagnosis_path(@patient), remote: true,  class: 'btn btn-primary' %>
    <table class="table" style="margin-top: 10px;" id="diagnoses">
      <thead>
        <tr>
          <th>Date</th>
          <th>Heart rate</th>
          <th>Bp</th>
          <th>Bs</th>
          <th>Prescription</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @patient.diagnoses.order(id: :desc).each do |diagnosis| %>
          <tr>
            <td><%= diagnosis.updated_at.to_s %></td>
            <td><%= diagnosis.heart_rate %></td>
            <td><%= diagnosis.bp %></td>
            <td><%= diagnosis.bs %></td>
            <td><%= diagnosis.prescription %></td>
            <td><%= link_to 'Show', [@patient, diagnosis] %></td>
            <td><%= link_to 'Edit', edit_patient_diagnosis_path(@patient, diagnosis), remote: true %></td>
            <td><%= link_to 'Destroy', [@patient, diagnosis], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
